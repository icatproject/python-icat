		     minOccurs="0" maxOccurs="unbounded"/>
	<xsd:element name="jobsAsOutput" type="job" 
		     minOccurs="0" maxOccurs="unbounded"/>
	<xsd:element name="parameters" type="dataCollectionParameter" 
		     minOccurs="0" maxOccurs="unbounded"/>
